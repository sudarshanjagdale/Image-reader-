async function extractAllPagesAndDownloadCSV() {
    let csvData = "Document ID,Pages,Layout,Usage Rule,Source\n";
    let currentPage = 1;
    const totalPages = 184; // Update as needed
    const delay = 40000; // 40 seconds

    while (currentPage <= totalPages) {
        console.log(`ðŸ“„ Extracting page ${currentPage}...`);

        // Wait for page content to load
        await new Promise(resolve => setTimeout(resolve, delay));

        // Grab all table rows on current page
        const rows = document.querySelectorAll("table tbody tr");
        rows.forEach(row => {
            const cells = row.querySelectorAll("td");
            const rowData = Array.from(cells)
                .map(cell => `"${cell.innerText.trim()}"`)
                .join(",");
            csvData += rowData + "\n";
        });

        // Try to find and click next page
        const nextBtn = Array.from(document.querySelectorAll("button"))
            .find(btn => btn.getAttribute("aria-label")?.includes("Next page") || btn.textContent.includes("â€º"));

        if (!nextBtn || nextBtn.disabled) {
            console.log("âœ… No more pages or Next button is disabled.");
            break;
        }

        nextBtn.click();
        currentPage++;
    }

    // Download as CSV
    const blob = new Blob([csvData], { type: 'text/csv;charset=utf-8;' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = "hyperscience_training_data.csv";
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    console.log("âœ… CSV downloaded with all pages.");
}

extractAllPagesAndDownloadCSV();